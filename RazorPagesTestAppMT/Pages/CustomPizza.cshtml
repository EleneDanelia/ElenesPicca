@page
@model RazorPagesTestAppMT.Pages.CustomBurgerModel
@{
}

<div class="text-center container">
    <h1>Create Your Burger</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Burger.BurgerName" placeholder="Give your pizza a name..." />
        <br />
        <input type="checkbox" asp-for="Burger.TomatoSauce" placeholder="Tomato Sauce" />Tomato Sauce
        <br />

        <input type="checkbox" asp-for="Burger.Cheese" placeholder="Cheese" />Cheese
        <br />

        <input type="checkbox" asp-for="Burger.Peperoni" placeholder="Peperoni" />Peperoni
        <br />

        <input type="checkbox" asp-for="Burger.Mushroom" placeholder="Mushroom" />Mushroom
        <br />

        <input type="checkbox" asp-for="Burger.Tuna" placeholder="Tuna" />Tuna
        <br />

        <input type="checkbox" asp-for="Burger.Pineapple" placeholder="Pineapple" />Pineapple
        <br />

        <input type="checkbox" asp-for="Burger.Ham" placeholder="Ham" />Ham
        <br />

        <input type="checkbox" asp-for="Burger.Beef" placeholder="Beef" />Beef
        <br />

        <button class="btn btn-primary mt-1" type="submit">Order Burger</button>
    </form>
</div>