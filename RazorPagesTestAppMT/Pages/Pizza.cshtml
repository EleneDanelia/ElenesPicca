@page
@model RazorPagesTestAppMT.Pages.BurgerModel
@{
}


<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Burger!</h1>
        <h4>Choose one, or try our Burger Builder! Then order and done!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everything!</h4>
        <p class="smallText"><i>Only one buger.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Make your Burger</h3>
                            <p style="text-align: left;">Make your own Burger with our BurgerMaker!</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="CustomBurger">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var burger in Model.fakeBurgerDB)
            {
                var imagePath = "~/images/Pizzas/" + (burger.ImageTitle + ".png");

                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" asp-page="Checkout"
                    asp-route-PizzaName="@burger.BurgerName"
                    asp-route-ImageTitle="@burger.ImageTitle" 
                    asp-route-PizzaPrice="@burger.FinalPrice">
                    <img src="@imagePath" class="w-100" asp-append-version="true" /></a>
                    <br />
                </div>
            }



        </div>
    </div>
</div>